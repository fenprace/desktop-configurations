[bar/main]
monitor = eDP
width = 100%
height = 40
bottom = false
fixed-center = false
line-size = 2

background = ${color.bg}
foreground = ${color.fg}

font-0 = "Iosevka Nerd Font:size=16;4"
font-1 = "Iosevka Nerd Font:size=26;6"
font-2 = "Noto Sans Mono CJK SC:size=16;4"

enable-ipc = true
cursor-click = pointer

scroll-up = i3wm-wsnext
scroll-down = i3wm-wsprev

# Tray
tray-position = right
tray-background = ${color.shade1}
tray-offset-x = 0
tray-offset-y = 0
tray-padding = 0

modules-left = menu-start R-12 workspaces R-2B terminal vscode firefox R-BB window-title
modules-right = window-close L-7B backlight L-67 network L-56 volume L-45 battery L-34 date-time L-23 menu-power L-12

